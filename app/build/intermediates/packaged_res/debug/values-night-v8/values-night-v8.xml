<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/transparent</item>
        <item name="tabTextColor">?colorPrimaryVariant</item>
        <item name="tabSelectedTextColor">?colorPrimaryVariant</item>
        <item name="tabIndicatorColor">?colorPrimaryVariant</item>
        <item name="tabRippleColor">@color/ripple_color</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Theme.AbundantLifeHymnBook" parent="Theme.MaterialComponents.Light.NoActionBar">
        
        <item name="colorPrimary">@color/dark_blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_100</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">@color/dark_blue_400</item>
        
    </style>
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_blue_300</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_algc_splash</item>

        <item name="postSplashScreenTheme">@style/Theme.AbundantLifeHymnBook</item>

    </style>
    <style name="background">
        <item name="android:background">@color/teal_200</item>
    </style>
    <style name="chorus_id_style" parent="h1Style">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="h1Style" parent="android:Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#33000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">0</item>
    </style>
    <style name="verse_id_style" parent="h1Style">
        <item name="android:textColor">?colorPrimaryVariant</item>
    </style>
</resources>