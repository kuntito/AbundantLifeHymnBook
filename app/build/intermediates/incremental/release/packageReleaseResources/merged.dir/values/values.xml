    <integer name="hymn_book_anim_duration">500</integer>
    <string name="app_name">Hymn Book</string>
    <string name="blank"/>
    <string name="hello_blank_fragment">Hello blank fragment</string>
    <string name="hymn_list_header">ABUNDANT LIFE SELECTED\nINSPIRATIONAL HYMNS</string>
